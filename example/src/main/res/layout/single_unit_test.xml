<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="charcoal.ehealthinnovation.org.annotationtestproject.SingleUnitConversion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <charcoal.ehealthinnovation.org.charcoaltextview.view.CharcoalTextView
            android:id="@+id/unit_field_mmoll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <charcoal.ehealthinnovation.org.charcoaltextview.view.CharcoalTextView
            android:id="@+id/unit_field_mgdl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <charcoal.ehealthinnovation.org.charcoaltextview.view.CharcoalTextView
            android:id="@+id/unit_only_field_mgdl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/pref_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textOff="mmol/L"
            android:textOn="mg/dL"
            app:showText="true" />
    </RelativeLayout>

</LinearLayout>
